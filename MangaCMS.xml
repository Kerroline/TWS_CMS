             <param name="mangaID">Manga ID in URL</param>
             <param name="image">Poster ID </param>
             <returns></returns>
             <remarks>
             Sample request:
            
                 POST /Upload
                 {
                    "mangaID": 1
                    "image": file.png
                 }
            
             </remarks>
